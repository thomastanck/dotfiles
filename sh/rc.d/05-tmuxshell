# Open tmux sessions automatically on servers
if [[ $computer == "pi" ]]; then
	if command -v tmux>/dev/null; then
		[[ ! $TERM =~ screen ]] && [ -z $TMUX ] &&
		tmux -2 new -A -s pi
	fi
fi

if [[ $computer == "pysweeper" ]]; then
	if command -v tmux>/dev/null; then
		[[ ! $TERM =~ screen ]] && [ -z $TMUX ] &&
		tmux -2 new -A -s sweep
	fi
fi
